---
interface Service {
  title: string;
  description: string;
  icon: string;
}

const services: Service[] = [
  {
    title: 'Race Parts',
    description: 'Premium quality parts for all makes and models. OEM and aftermarket options available with warranty.',
    icon: `<svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
    </svg>`,
  },
  {
    title: 'Race Preparation',
    description: 'Expert diagnostics and repairs by certified mechanics using state-of-the-art equipment.',
    icon: `<svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
    </svg>`,
  },
  {
    title: 'Race Support',
    description: 'Regular maintenance services to keep your vehicle running smoothly and efficiently.',
    icon: `<svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
    </svg>`,
  },
];
---

<section id="services" class="py-20 bg-white">
  <!-- <div class="max-w-7xl mx-auto px-4"> -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-4">Our Services</h2>
    <p class="text-gray-600 text-center mb-12 max-w-2xl mx-auto">
      Comprehensive automotive solutions tailored to your needs. From routine maintenance to complex repairs, we've got you covered.
    </p>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        services.map((service) => (
          <div class="p-6 bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow">
            <div class="w-6 h-6 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              <Fragment set:html={service.icon} />
            </div>
            <h3 class="text-xl font-semibold mb-4">{service.title}</h3>
            <p class="text-gray-600">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
