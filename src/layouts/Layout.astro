---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
}

const { title, description, canonicalURL = Astro.url.href, image = '/assets/hero-bg.jpg' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <title>{title}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Theme and color -->
    <meta name="theme-color" content="#0ea5e9" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={new URL(image, Astro.url)} />
    <meta property="og:site_name" content="Gear-X Automotive" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Gear-X Automotive" />
  </head>
  <body>
    <header class="header">
      <div class="header-container">
        <a href="/" class="logo-link" aria-label="Gear-X Automotive homepage">
          <img src="//madebyandyco.github.io/gearx.nz/assets/logo.svg" alt="Gear-X Automotive logo" class="logo-image" />
        </a>
      </div>
    </header>
    <main class="w-full">
      <slot />
    </main>
  </body>
</html>
